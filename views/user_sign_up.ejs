<link rel="stylesheet" href="/css/user_sign_up.css">
<body>
    
    <div id="form">
        <h1>Sign Up</h1>
        <form id="input" action="/users/create" method="post">
            <label>Your Name</label>
            <input type="text" name="name" placeholder="ABCD" required>
            <label>E-Mail</label>
            <input type="email" name="email" placeholder="example@xyz.com" required>
            <label>Password</label>
            <input type="password" name="password" placeholder="********" required>
            <label>Confirm Password</label>
            <input type="password" name="confirm_password" placeholder="********" required>
            <input type="submit" value="Sign Up">
        </form>
    </div>
    
</body>
