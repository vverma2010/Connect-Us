<link rel="stylesheet" href="/css/user_sign_up.css">
<script src="https://kit.fontawesome.com/0691d296c8.js" crossorigin="anonymous"></script>

<body>
    
    <div id="form">
        <h1>Sign Up</h1>
        <form id="input" action="/users/create" method="post">
            <label>Your Name</label>
            <input type="text" name="name" placeholder="ABCD" required>
            <label>E-Mail</label>
            <input type="email" name="email" placeholder="example@xyz.com" required>
            <label>Password</label>
            <input type="password" name="password" placeholder="********" required>
            <label>Confirm Password</label>
            <input type="password" name="confirm_password" placeholder="********" required>
            <input type="submit" value="Sign Up">
        </form>
        <div id="p">
            <a id="auth" href="/users/auth/google">Sign Up using Google &nbsp;<i class="fab fa-google"></i></a>
        </div>
        <div id="p">
            <a id="auth" href="/users/auth/github">Sign Up using Github &nbsp;<i class="fab fa-github"></i></a>
        </div>
    </div>
    
</body>
