<html>
    <head>
        <link rel="stylesheet" href="/css/home.css">
        <link href="https://fonts.googleapis.com/css2?family=Aclonica&display=swap" rel="stylesheet">
        <title>
            <%= title %>
        </title>
    </head>
     <body>
        <div id="content">
            <section id="feed-posts">
                <% if(locals.user) {%>
                    <form action="/posts/newpost" id="new-post-form" method="POST">
                        <textarea name="content" cols="30" rows="3" placeholder="Type Something.." required></textarea>
                        <input id="post-submit" type="submit" value="Post">
                    </form>
                <% } %>
                <h2>Posts</h2>
                <div id="posts-list-container">
                    <ul>
                        <% for(post of posts){ %>
                             <!-- included code of post and comment section -->
                            <%- include('_post') -%>
                        <% } %>
                    </ul>
                </div>
            </section>
            <section id="user-friends">
                <h3>Friends</h3>
                <% for(u of all_users){ %>
                    <p>
                        <a href="/users/profile/<%= u.id%>"><%= u.name%></a>
                    </p>
                <% } %>    
            </section>
        </div>
        <script src="/js/home_posts.js"></script>
        <script src="/js/home_comments.js"></script>
    </body>
</html>