<html>
    <head>
        <link href="https://fonts.googleapis.com/css2?family=Aclonica&display=swap" rel="stylesheet">
        <title>
            <%= title %>
        </title>
    </head>

    <body>
        <h1>Connect-Us / <%= title %></h1>
        <section id="feed-posts">
            <h4>Posts</h4>
            <form action="/posts/newpost" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Type Something.."></textarea>
                <input type="submit" value="Post">
            </form>
            

            <div id="post-list">

                <ul>
                    <% for(post of posts){ %>
                        <li>
                           <p>
                            <%= post.content %>
                            <br>
                            <small>
                                <%= post.user.name %>
                            </small>
                           </p>
                        </li>
                    <% } %>
                </ul>
            </div>
        </section>

    </body>
</html>